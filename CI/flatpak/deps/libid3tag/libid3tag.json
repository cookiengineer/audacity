{
  "name": "libid3tag",
  "buildsystem": "cmake-ninja",
  "post-install": [
    "install -Dm644 -t /app/lib/pkgconfig/ id3tag.pc"
  ],
  "sources": [
    {
      "type": "git",
      "url": "https://github.com/tenacityteam/libid3tag.git",
      "tag": "0.16.1",
      "commit": "1cc101e90dda1fb6e8cc57a0c707a3305bf674f9"
    },
    {
      "type": "file",
      "path": "id3tag.pc"
    },
    {
      "type": "shell",
      "commands": [
        "rm compat.c frametype.c",
        "cp /usr/share/gnu-config/config.sub .",
        "cp /usr/share/gnu-config/config.guess ."
      ]
    }
  ]
}
